<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.trophies.TrophiesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_trophies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="center"
            android:text="TROPHIES"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#000000" />

        <View
            android:id="@+id/text_line"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:layout_alignLeft="@+id/text_trophies"
            android:layout_alignRight="@+id/text_trophies"
            android:background="@android:color/black"
            android:layout_below="@+id/text_trophies"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_line"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/trophy_7DayStreak"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trophy_image_transparent"
                    android:text="7 day streak"
                    android:textSize="16dp"
                    android:layout_marginRight="7dp" />

                <Button
                    android:id="@+id/trophy_AmazingSaver"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trophy_image_transparent"
                    android:text="Amazing Saver"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/trophy_ScrapingBy"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trophy_image_transparent"
                    android:text="Scraping By"
                    android:textSize="16dp"
                    android:layout_marginRight="7dp" />

                <Button
                    android:id="@+id/trophy_HowStudious"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trophy_image_transparent"
                    android:text="How Studious"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <Button
                    android:id="@+id/trophy_HappyHealthy"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trophy_image_transparent"
                    android:text="Happy &amp; Healthy"
                    android:textSize="15dp"
                    android:layout_marginRight="7dp"/>

                <Button
                    android:id="@+id/trophy_FinancialPlan"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/trophy_image_transparent"
                    android:text="Financial Plan"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>