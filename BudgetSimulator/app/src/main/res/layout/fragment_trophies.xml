<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.trophies.TrophiesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/text_trophies"
                style="@style/center_top_text"
                android:text="TROPHIES"
                android:layout_marginHorizontal="@dimen/report_recycler_margin"/>

            <View
                android:id="@+id/text_line"
                style="@style/linebreak"
                android:layout_alignLeft="@+id/text_trophies"
                android:layout_alignRight="@+id/text_trophies"
                android:layout_below="@+id/text_trophies"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_line"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <Button
                        android:id="@+id/trophy_7_day_streak"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="7 day streak"
                        android:textSize="16dp"
                        android:layout_marginRight="7dp" />

                    <Button
                        android:id="@+id/trophy_amazing_saver"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Amazing Saver"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <Button
                        android:id="@+id/trophy_scraping_by"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Scraping By"
                        android:textSize="16dp"
                        android:layout_marginRight="7dp" />

                    <Button
                        android:id="@+id/trophy_how_studious"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="How Studious"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <Button
                        android:id="@+id/trophy_happy_healthy"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Happy &amp; Healthy"
                        android:textSize="15dp"
                        android:layout_marginRight="7dp"/>

                    <Button
                        android:id="@+id/trophy_financial_goal"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:text="Financial Goal"
                        android:textSize="16dp" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>