<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:orientation="vertical"
    tools:context=".ui.financial_plan.FinancialPlanFragment">



    <TextView
        android:id="@+id/text_financial_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/label1" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Job Income"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/text_financial_plan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editText1" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter number"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/text_financial_plan"
        app:layout_constraintStart_toEndOf="@+id/label1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Allowance"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/editText1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter number"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/editText1"
        app:layout_constraintStart_toEndOf="@+id/label2"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Repeat the above TextView and EditText blocks for label3, editText3, label4, editText4, etc. -->


</androidx.constraintlayout.widget.ConstraintLayout>