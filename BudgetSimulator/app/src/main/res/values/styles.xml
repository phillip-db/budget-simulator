<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="status_component">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center|fill_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="center_top_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="summary_text_standard">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">@dimen/report_summary_standard</item>
    </style>

    <style name="summary_button" xmlns:app="http://schemas.android.com/apk/res-auto">
        <item name="android:layout_width">0dp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>
